<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="55pt"
            android:text="회원가입"
            android:textStyle="bold"
            android:fontFamily="@font/nanumsqure"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="660dp"
        android:background="#EEEEEE"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/editTextTextPersonName"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85pt"
        android:ems="10"
        android:hint="이메일을 입력하세요."
        android:fontFamily="@font/nanumsqure"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/nanumsqure"
        android:hint="인증번호"
        android:inputType="number" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:text="다음"
        android:textSize="16sp"
        android:layout_marginTop="600dp"
        android:layout_centerHorizontal="true"
        app:backgroundTint="#0071BC" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94pt"
        android:layout_marginLeft="140pt"
        android:text="인증"
        android:fontFamily="@font/nanumsqure"
        android:textColor="#0071BC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="140pt"
        android:layout_marginTop="23pt"
        android:text="확인"
        android:fontFamily="@font/nanumsqure"
        android:textColor="#0071BC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_marginTop="40pt"
        android:layout_marginLeft="14pt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="학교 이메일을 사용하여     인증해주세요."
        android:fontFamily="@font/nanumsqure"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14pt"
        android:layout_marginTop="64pt"
        android:fontFamily="@font/nanumsqure"
        android:text="해당 이메일로 인증 번호를 보내드려요."
        android:textColor="#707070"
        android:textSize="14sp" />

</RelativeLayout>