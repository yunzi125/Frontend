<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/some_id">

    <View
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/arrow_left" />
    <!-- 이용약관 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|top"
        android:text="약관 동의"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsqure"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="이용약관 동의"
            android:textColor="#222222"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60pt"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="(필수)"
            android:textColor="#2C89C7"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="215dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="개인 정보 수집 및 이용"
            android:textColor="#222222"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83pt"
            android:layout_marginTop="215dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="(필수)"
            android:textColor="#2C89C7"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68pt"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="(선택)"
            android:textColor="#9E9E9E"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="마케팅 정보 수신"
            android:textColor="#222222"
            android:textSize="16dp" />


        <RadioButton
            android:id="@+id/termrd01"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="165dp"
            android:gravity="top"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/termrd02"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="210dp"
            android:gravity="top"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/termrd03"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="255dp"
            android:gravity="top"
            android:onClick="onRadioButtonClicked"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="290dp"
            android:fontFamily="@font/nanumsqure"
            android:gravity="top"
            android:text="저요에서 찾은 유용한 정보를 받겠습니다."
            android:textColor="#999999CC"
            android:textSize="13dp" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="620dp"
            android:layout_marginBottom="15dp"
            android:text="다음"
            android:textSize="16sp"
            app:backgroundTint="#0071BC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/nanumsqure"

            android:gravity="top"
            android:text="간단한 약관 동의 후      저요를 시작해보세요"
            android:textColor="#222222"
            android:textSize="19dp" />
    </RelativeLayout>


</RelativeLayout>