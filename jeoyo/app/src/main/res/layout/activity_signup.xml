<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:text="오픈소스 라이선스"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="660dp"
        android:background="#EEEEEE"
        android:layout_marginTop="70dp"/>


    <EditText
        android:id="@+id/editTextTextPersonName"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="인증 가능한 이메일 주소"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextNumber"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="인증번호"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="영문, 숫자를 포함하여 8-20자"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextTextPassword"
        style="@style/borderRound"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="비밀번호 재확인"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:text="다음"
        android:textSize="16sp"
        app:backgroundTint="#0071BC" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증"
        android:textColor="#0071BC"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="#0071BC"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="28dp"
        app:srcCompat="@drawable/eye_no" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="28dp"
        app:srcCompat="@drawable/eye_yes" />

</RelativeLayout>